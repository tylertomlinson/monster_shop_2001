<h1 align = "center">Order #<%= @order.id %></h1>
<p>Date created: <%= @order.created_at.strftime("%m/%d/%Y") %><br/>
Date updated: <%= @order.updated_at.strftime("%m/%d/%Y") %><br/>
Status: <%= @order.status %><br/>
<%= link_to "Cancel Order", profile_order_path, method: :delete %></p>
<center>
  <table>
    <tr>
      <th>Item</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Subtotal</th>
    </tr>
  <% @order.item_orders.each do |item_order|%>
    <tr>
    <section id = "item-<%=item_order.item_id%>">
        <td><p><img align = "center" class="order-image" src= <%= item_order.item.image %>>
        <%= item_order.item.name %></p></td>
        <td><p><%= item_order.item.description %></p></td>
        <td><p><%= number_to_currency(item_order.price)%></p></td>
        <td><p><%= item_order.quantity%></p></td>
        <td><p><%= number_to_currency(item_order.subtotal)%></p></td>
      </section>
    </tr>
  <% end %>
</table>

<section id="grandtotal">
  <p>Grand total: <%=number_to_currency(@order.grandtotal)%></p>
</section>
<p>Total quantity: <%= @order.total_quantity %><br/>
