<% if @merchant %>
<h1><%= link_to @merchant.name, "/merchants/#{@merchant.id}"%><span> Items</span></h1>
<p align="center"><%= link_to "Add New Item", "/merchants/#{@merchant.id}/items/new" %></p>
<% else %>
<h1>All Items</h1>
<% end %>

  <div class="row">
    <div class="column">
    <h3>Most Popular Items</h3>
    <% @items.most_popular(5).each do |item| %>
      <li><%= link_to item.name %>: <%= item.quantity_ordered %> purchased</li>
    <% end %>
  </div>
  <div class="column">
    <h3>Least Popular Items</h3>
    <% @items.most_popular(5).each do |item| %>
      <li><%= link_to item.name %>: <%= item.quantity_ordered%> purchased</li>
    <% end %>
  </div>
</div>

<section class="grid-container">
  <% @items.each do |item| %>
  <section class = "grid-item" id= 'item-<%=item.id%>'>
    <h2> <%=link_to item.name, "/items/#{item.id}" %> </h2>
    <p>Sold by: <%=link_to item.merchant.name, "/merchants/#{item.merchant.id}" %></p>
    <%= link_to image_tag(item.image), "/items/#{item.id}", id: "img-#{item.id}" %>
    <p> <%= item.description if current_merchant? || !@merchant %> </p>
    <p>Price: <%=number_to_currency(item.price) %> </p>
    <p>Inventory: <%= item.inventory %> </p>

  <% if current_merchant? || current_admin? %>
    <%= link_to 'Edit Item', "/merchant/items/#{item.id}/edit", method: :get if current_merchant? || !@merchant%>
    <%= link_to "Delete", "/merchant/items/#{item.id}", method: :delete if current_merchant? || !@merchant %>
    <% if item.active? %>
      <p>Active</p>
      <%= link_to 'Deactivate', "/merchant/items/#{item.id}?status_update=deactivate", method: :patch if current_merchant? || !@merchant %>
      <% else %>
      <p>Inactive</p>
      <%= link_to 'Activate', "/merchant/items/#{item.id}?status_update=activate", method: :patch if current_merchant? || !@merchant %>
    <% end %>
    <% end %>
  </section>
  <% end %>
